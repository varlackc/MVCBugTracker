@model IEnumerable<MVCBugTrackerDemo.Models.UserModel>

@{
    ViewBag.Title = "UserList";
}

<h2>List Of Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateUser", new { id = item.Id }, new { @class = "btn btn-default btn-large" }) |
                @Html.ActionLink("Delete", "DeleteUsers", new { id = item.Id }, new { @class = "btn btn-default btn-large" })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Add A New User", "CreateUser", null, new { @class = "btn btn-primary btn-large" })
</p>
