@model IEnumerable<MVCBuckTrackerDemo.Models.ProjectModel>

@{
    ViewBag.Title = "Project List";
}

<h2>Project List</h2>

<p>
    @Html.ActionLink("Create New Project", "Create")
</p>

<!-- Need to only run if the model is not null  -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.BugId)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteProjects", "Project", new { id = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeadLine)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.BugId)
                    </td>*@
            <td>
                @* HTML Helpers in Razor *@
                @Html.ActionLink("Edit", "UpdateProjects", new { id = item.Id }, new { @class ="btn btn-default btn-large"} ) |
                @Html.ActionLink("Details", "BugList", "Bug", new { id = item.Id }, new { @class ="btn btn-default btn-large"}) |
                @*Html.ActionLink("Delete", "DeleteProject", new { id = item.Id })*@

                @* This form is used to create the buttom the onclick atttribute allows to confirm choice before sending*@
                <input class="btn btn-default" type="submit" value="Delete"
                       onclick="return confirm('Are you sure you want to delete record with ID = @item.Id project: @item.Name');" />

            </td>

            </tr>
        }
    }

</table>
